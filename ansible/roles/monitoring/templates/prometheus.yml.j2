global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "alert_rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'app-servers'
    static_configs:
      - targets: [{% for host in groups['app_servers'] %}'{{ host }}:5000'{% if not loop.last %},{% endif %}{% endfor %}]
    metrics_path: /metrics
    scrape_interval: 10s

  - job_name: 'node-app-servers'
    static_configs:
      - targets: [{% for host in groups['app_servers'] %}'{{ host }}:9100'{% if not loop.last %},{% endif %}{% endfor %}]

alerting:
  alertmanagers:
    - static_configs:
        - targets: []